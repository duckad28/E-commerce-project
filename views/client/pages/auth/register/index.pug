extends ../../../layouts/default.pug

block main 
    section.vh-100(style='background-color: #eee;')
        .container.h-100
            .row.d-flex.justify-content-center.align-items-center.h-100
                .col-lg-12.col-xl-11
                    .card.text-black(style='border-radius: 25px;')
                        .card-body.p-md-5
                            .row.justify-content-center
                                .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1
                                    p.text-center.h1.fw-bold.mb-5.mx-1.mx-md-4.mt-4 Sign up
                                    form.mx-1.mx-md-4(
                                        action='/auth/register'
                                        method='POST'
                                        form-register-user
                                    )
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.fa-user.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0(data-mdb-input-init='')
                                                input.form-control(type='text' name='user_name')
                                                label.form-label(for='user_name') Your Name
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.fa-envelope.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0(data-mdb-input-init='')
                                                input.form-control(type='email' name='email')
                                                label.form-label(for='email') Your Email
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.fa-lock.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0(data-mdb-input-init='')
                                                input.form-control(type='password' name='password')
                                                label.form-label(for='password') Password
                                        .text-center.text-lg-start.mt-4.pt-2
                                            button.btn.btn-primary.btn-lg(type='submit' data-mdb-button-init='' data-mdb-ripple-init='' style='padding-left: 2.5rem; padding-right: 2.5rem;') Register
                                            p.small.fw-bold.mt-2.pt-1.mb-0
                                                | You have an account? 
                                                a.link-danger(href='/auth/login') Login
                                .col-md-10.col-lg-6.col-xl-7.d-flex.align-items-center.order-1.order-lg-2
                                    img.img-fluid(src='https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp' alt='Sample image')
